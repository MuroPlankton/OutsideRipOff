<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click me!"
        android:id="@+id/activity_game_click"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="score will be displayed here"
        android:id="@+id/activity_game_score"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_game_click"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="powerup"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_game_powerup_button"
        android:layout_above="@id/activity_game_powerup_progress"
        />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:max="1000"
        android:id="@+id/activity_game_powerup_progress"
        android:layout_above="@id/activity_game_challenge_button"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="16dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="challenge"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_game_challenge_button"
        android:layout_above="@id/activity_game_challenge_progress"
        />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_game_challenge_progress"
        android:max="1000"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="16dp"
        />

</RelativeLayout>